<database>
   <queries>
      <query name="acl_id">
         <id>gacl_acl.id</id>
         <label>concat( gacl_acl.note, ': permite ', gacl_acl.allow, ', activado ', gacl_acl.enabled)</label>
         <from>gacl_acl</from>
      </query>

      <query name="acl_section_value">
         <id>gacl_acl_sections.value</id>
         <label>gacl_acl_sections.name</label>
         <from>gacl_acl_sections</from>
         <order_by>order_value</order_by>
      </query>

      <query name="aco_section_value">
         <id>gacl_aco_sections.value</id>
         <label>gacl_aco_sections.name</label>
         <from>gacl_aco_sections</from>
         <order_by>order_value</order_by>
      </query>

      <query name="aro_section_value">
         <id>gacl_aro_sections.value</id>
         <label>gacl_aro_sections.name</label>
         <from>gacl_aro_sections</from>
         <order_by>order_value</order_by>
      </query>

      <query name="axo_section_value">
         <id>gacl_axo_sections.value</id>
         <label>gacl_axo_sections.name</label>
         <from>gacl_axo_sections</from>
         <order_by>order_value</order_by>
      </query>

   <query name="aro_groups">
         <id>gacl_aro_groups.id</id>
         <label>gacl_aro_groups.name</label>
         <from>gacl_aro_groups</from>
   </query>

   <query name="axo_groups">
         <id>gacl_axo_groups.id</id>
         <label>gacl_axo_groups.name</label>
         <from>gacl_axo_groups</from>
   </query>

   <query name="aro_id">
         <id>gacl_aro.id</id>
         <label>gacl_aro.name</label>
         <from>gacl_aro</from>
         <order_by>order_value</order_by>
   </query>

   <query name="axo_id">
         <id>gacl_axo.id</id>
         <label>gacl_axo.name</label>
         <from>gacl_axo</from>
         <order_by>order_value</order_by>
   </query>

   <query name="aco_id">
         <id>gacl_aco.id</id>
         <label>gacl_aco.name</label>
         <from>gacl_aco</from>
         <order_by>order_value</order_by>
   </query>

   <query name="aco_value">
         <id>gacl_aco.value</id>
         <label>gacl_aco.name</label>
         <from>gacl_aco</from>
         <order_by>order_value</order_by>
   </query>



   </queries>
</database>
