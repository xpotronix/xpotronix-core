<feat>
        <!-- nombre de la aplicacion -->
        <application></application>
        <generator>xpotronix2</generator>

	<!-- datos de la organizacion -->
	<company_name>xpotronix Corporation</company_name>

	<!-- codificacion en la que funcionara la aplicacion -->
	<encoding>UTF-8</encoding>

	<!-- sitio -->
	<page_title>xpotronix Application</page_title>
	<site_domain>red.justamente.net</site_domain>
	<!-- <base_url>http://xpotronix.com/xpotronix/</base_url> -->
	<crypt_url>false</crypt_url>
        <login_window>true</login_window>
	<menu_bar>true</menu_bar>
	<paging_toolbar>true</paging_toolbar>

	<!-- default template -->
	<theme>/ext4/resources/ext-theme-neptune/ext-theme-neptune-all.css</theme>
	<theme>/ext4/resources/ext-theme-gray/ext-theme-gray-all.css</theme>

	<!-- codificacion base de datos -->

	<force_utf8>false</force_utf8>

	<!-- locales -->
	<encoding>UTF-8</encoding>
	<host_locale>es_AR</host_locale>

	<date_format>d/m/y</date_format>
	<date_long_format>d/m/Y</date_long_format>
	<time_format>H:i:s</time_format>

	<default_timezone>America/Argentina/Buenos_Aires</default_timezone>

	<!-- formato de la fecha/hora para la base de datos -->

	<date_db_format>Y-m-d</date_db_format>
	<time_db_format>H:i:s</time_db_format>

	<date_db_null>0000-00-00</date_db_null>
	<time_db_null>00:00:00</time_db_null>

	<currency_symbol>$</currency_symbol>

	<!-- comportamiento de la aplicacion -->
	<default_module>users</default_module>
	<set_time_limit></set_time_limit>

	<!-- debugging -->
	<syslog_level>10</syslog_level>
	<messages_level>-1</messages_level>
	<debug_xml>false</debug_xml>
	<log_changes>false</log_changes>

	<!-- acceso a base de datos -->
	<load_full_query>true</load_full_query>
	<add_labels>true</add_labels>
	<sql_page_model>page</sql_page_model>
	<page_rows>50</page_rows>
	<query_action>data</query_action>
	<load_after_store>false</load_after_store>
	<!-- <query_action>datab</query_action> -->
	<remote_sort>true</remote_sort>
	<include_dataset>0</include_dataset>
	<ignore_null_fields>true</ignore_null_fields>
	<ignore_null_dataset>true</ignore_null_dataset>
	<on_null_dataset></on_null_dataset>
	<hide_pk>true</hide_pk>
	<hide_fk>true</hide_fk>
	<auto_load>false</auto_load>
	<key_delimiter>^</key_delimiter>
	<container_tag>c_</container_tag>
	<try_update_on_fail>true</try_update_on_fail>
	<blob_load>false</blob_load>

	<!-- transformacion de la aplicacion -->

	<transform>bridge</transform>
	<default_view>ext4new/viewport</default_view>

	<!-- serializacion -->
	<envelope_tag>true</envelope_tag>
	<expose_server_vars>false</expose_server_vars>

</feat>
