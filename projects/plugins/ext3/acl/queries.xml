<queries>
  <query name="acl_id">
	 <id>gacl.id</id>
	 <label>concat( gacl.note, ': permite ', gacl.allow, ', activado ', gacl.enabled)</label>
	 <from>gacl_acl</from>
	 <alias>gacl</alias>
  </query>

  <query name="acl_section_value">
	 <id>gacls.value</id>
	 <label>gacls.name</label>
	 <from>gacl_acl_sections</from>
	 <alias>gacls</alias>
	 <order_by>gacls.order_value</order_by>
  </query>

  <query name="aco_section_value">
	 <id>gacos.value</id>
	 <label>gacos.name</label>
	 <from>gacl_aco_sections</from>
	 <alias>gacos</alias>
	 <order_by>gacos.order_value</order_by>
  </query>

  <query name="aro_section_value">
	 <id>garos.value</id>
	 <label>garos.name</label>
     <from>gacl_aro_sections</from>
     <alias>garos</alias>
	 <order_by>garos.order_value</order_by>
  </query>

  <query name="axo_section_value">
	 <id>gaxos.value</id>
	 <label>gaxos.name</label>
     <from>gacl_axo_sections</from>
     <alias>gaxos</alias>
	 <order_by>gaxos.order_value</order_by>
  </query>

