<database>
	<table name="audit">
		<process name="repost" translate="Volver a Postear">
			<acl action="permit" role="admin"/>
			<command name="repost" for="obj_start"/>
			<dialog>
				<panel type="Window" obj="usuario"><config>title:'Confirmar'</config>
				<items>
					<cmp><config>buttonAlign:'center',
						region:'center'
						,html: '<h1>Realmente desea invitar estos usuarios?</h1>' 
						,buttons: [
							{text:'Aceptar',handler:function(){ command.call(); panel.hide();}} 
							,{text:'Cancelar',handler:function(){ panel.hide();}}
						]</config>
					</cmp>
				</items>
				</panel>
			</dialog>
		</process>
		<process name="fix_transact_data" translate="fix_transact_data">
			<acl action="permit" role="admin"/>
			<command name="fix_transact_data" for="obj_start"/>
		</process>
	</table>
</database>
