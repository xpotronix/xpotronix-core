<processes>
        <table name="user_preferences">
               <process name="readState" translate="readState" view="json">
                        <acl action="permit" role="*"/>
                        <acl action="deny" role="anon"/>
                        <command name="readState" for="process_start"/>
                </process>
               <process name="saveState" translate="saveState" view="json">
                        <acl action="permit" role="*"/>
                        <acl action="deny" role="anon"/>
                        <command name="saveState" for="process_start"/>
                </process>

        </table>

        <table name="users">

               <process name="post_login" translate="post_login" view="json" display="hide">
                        <acl action="permit" role="admin"/>
                        <acl action="permit" role="*"/>
                        <command name="POST_login" for="process_start"/>
                </process>

               <process name="post_email_login" translate="post_email_login" view="json" display="hide">
                        <acl action="permit" role="admin"/>
                        <acl action="permit" role="*"/>
                        <command name="POST_email_login" for="process_start"/>
                </process>

               <process name="change_password" translate="change_password" view="json" display="hide">
                        <acl action="permit" role="*"/>
                        <command name="change_password" for="process_start"/>
                </process>

               <process name="reset_password" translate="reset_password" view="json" display="hide">
                        <acl action="permit" role="anon"/>
                        <command name="reset_password" for="process_start"/>
               </process>

               <process name="validate_code" translate="validate_code" view="json" display="hide">
                        <acl action="permit" role="anon"/>
                        <command name="validate_code" for="process_start"/>
               </process>

               <process name="register" translate="register" view="json" display="hide">
                        <acl action="permit" role="anon"/>
                        <command name="register" for="process_start"/>
               </process>


               <process name="logout" translate="logout" view="json" display="hide">
                        <acl action="permit" role="admin"/>
                        <acl action="permit" role="*"/>
                        <acl action="deny" role="anon"/>
                        <command name="logout" for="process_start"/>
                </process>

        </table>
</processes>
