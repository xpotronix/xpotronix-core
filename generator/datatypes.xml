<types>
	<xtype name="xpdate" class="xpDate" type="time">
		<type name="date" doctrineType="date"/>
	</xtype>
	<xtype name="xpdatetime" class="xpDateTime" type="time">
		<type name="datetime" doctrineType="datetime"/>
		<type name="timestamp" doctrineType="datetime"/>
	</xtype>
	<xtype name="xptime" class="xpTime" type="time">
		<type name="time" doctrineType="time"/>
	</xtype>

	<xtype name="xpenum" class="xpEnum" type="string">
		<type name="enum" doctrineType="string"/>
	</xtype>

	<xtype name="xpstring" class="xpString" type="string">
		<type name="char" doctrineType="string"/>
		<type name="varchar" doctrineType="string"/>
	</xtype>
	<xtype name="xpjson" class="xpJson" type="json">
		<type name="json" doctrineType="json"/>
	</xtype>
	<xtype name="xptext" class="xpText" type="string">
		<type name="text" doctrineType="string"/>
		<type name="tinytext" doctrineType="string"/>
		<type name="smalltext" doctrineType="string"/>
		<type name="mediumtext" doctrineType="string"/>
		<type name="largetext" doctrineType="string"/>
		<type name="longtext" doctrineType="string"/>
	</xtype>
	<xtype name="xpblob" class="xpBlob" type="string">
		<type name="tinyblob" doctrineType="blob"/>
		<type name="mediumblob" doctrineType="blob"/>
		<type name="blob" doctrineType="blob"/>
		<type name="longblob" doctrineType="blob"/>
	</xtype>
	<xtype name="xpboolean" class="xpBoolean" type="numeric">
		<type name="tinyint" doctrineType="boolean"/>
		<type name="bit" doctrineType="boolean"/>
	</xtype>
	<xtype name="xpint" class="xpInt" type="numeric">
		<type name="int" doctrineType="integer"/>
		<type name="int unsigned" doctrineType="integer"/>
		<type name="smallint" doctrineType="smallint"/>
		<type name="longint" doctrineType="bigint"/>
		<type name="bigint" doctrineType="bigint"/>
		<type name="bigint unsigned" doctrineType="bigint"/>
		<type name="year" doctrineType="smallint"/>
		<!-- mssql -->
		<type name="numeric" doctrineType="integer"/>
	</xtype>
	<xtype name="xpdecimal" class="xpDecimal" type="float">
		<type name="float" doctrineType="float"/>
		<type name="double" doctrineType="float"/>
		<type name="decimal" doctrineType="float"/>
		<!-- mssql -->
		<type name="money" doctrineType="float"/>
	</xtype>
</types>
